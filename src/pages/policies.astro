---
import Layout from "../components/Layout.astro";
import Card from "../components/ui/Card.astro";
import { directus } from "../lib/directus";
import { readItems } from '@directus/sdk';

let policies = [];
try {
  const response = await directus.request(
    readItems("policies", {
      sort: ["policy_title"],
      limit: 50
    })
  );
  policies = response || [];
} catch (e) {
  policies = [];
}
---

<Layout>
  <div style="max-width:900px;margin:0 auto;padding:0 1.5rem;">
    <section style="padding:3rem 0 2rem 0;">
      <h1 class="egac-section-title">Club Policies</h1>
      <p class="egac-section-lead">
        Our commitment to safety, inclusion, and good governance
      </p>
      <Card class="card--padded" title="Club Policies">
        <div style="overflow-x:auto;">
          <table class="egac-policies-table">
            <thead>
              <tr>
                <th>Policy / Document</th>
                <th>Date Approved</th>
                <th>Review Date</th>
              </tr>
            </thead>
            <tbody>
              {policies.length === 0 && (
                <tr><td colspan="3">No policies found.</td></tr>
              )}
              {policies.map(policy => (
                <tr>
                  <td>
                    {policy.slug === 'constitution' ? (
                      <a href="/policies/constitution">{policy.policy_title}</a>
                    ) : (
                      policy.policy_title
                    )}
                  </td>
                  <td>{policy.date_approved || ''}</td>
                  <td>{policy.review_date || ''}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
        <p style="margin-top:2rem;">
          We regularly review and update our policies to ensure a safe, inclusive, and well-governed club for all members and visitors.
        </p>
      </Card>
      <style>
        .egac-policies-table {
          width: 100%;
          border-collapse: collapse;
          background: white;
          border-radius: 0.7rem;
          overflow: hidden;
          font-size: 1rem;
          box-shadow: 0 1px 4px rgba(20,95,186,0.06);
          border: 1px solid #e0e0e0;
          margin-top: 1.5rem;
        }
        .egac-policies-table th, .egac-policies-table td {
          text-align: left;
          padding: 0.8rem 0.7rem;
          border-bottom: 1px solid #e0e0e0;
        }
        .egac-policies-table th {
          background: var(--blue);
          color: var(--white);
          font-weight: 700;
        }
        .egac-policies-table tr:last-child td {
          border-bottom: none;
        }
        .egac-policies-table a {
          color: var(--blue);
          text-decoration: underline;
          font-weight: 600;
        }
        .egac-policies-table a:hover {
          color: var(--yellow);
        }
      </style>
    </section>
  </div>
  <style>
    .egac-section-title {
      font-size: 3rem;
      font-weight: 900;
      color: var(--blue);
      margin-bottom: 0.8rem;
      text-transform: uppercase;
      letter-spacing: 0.02em;
      text-align: center;
      font-family: var(--font-heading);
      text-shadow: 0 2px 12px rgba(20, 95, 186, 0.08);
    }
    .egac-section-lead {
      color: var(--dark-gray);
      margin-bottom: 2.5rem;
      font-size: 1.2rem;
      font-weight: 600;
      text-align: center;
      font-family: var(--font-sans);
    }
    .policy-quicklinks-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 1.5rem;
      margin: 2.5rem 0 0 0;
      justify-items: center;
    }
    @media (min-width: 600px) {
      .policy-quicklinks-grid {
        grid-template-columns: 1fr 1fr;
      }
    }
    @media (min-width: 900px) {
      .policy-quicklinks-grid {
        grid-template-columns: 1fr 1fr 1fr;
      }
    }
    .policy-quicklink {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background: #f8fafc;
      border-radius: 1.2rem;
      box-shadow: 0 2px 12px rgba(20,95,186,0.08);
      border: 1.5px solid #e0e0e0;
      padding: 2.2rem 1.5rem 1.3rem 1.5rem;
      min-width: 180px;
      max-width: 260px;
      width: 100%;
      text-align: center;
      text-decoration: none;
      color: var(--blue);
      font-family: var(--font-heading);
      font-weight: 700;
      font-size: 1.08rem;
      transition: box-shadow 0.18s, border 0.18s, color 0.18s, background 0.18s, transform 0.18s;
      outline: none;
    }
    .policy-quicklink:hover, .policy-quicklink:focus-visible {
      box-shadow: 0 6px 24px rgba(20,95,186,0.18);
      border: 1.5px solid var(--yellow);
      color: var(--yellow);
      background: #fffbe6;
      transform: translateY(-3px) scale(1.04);
      text-decoration: none;
    }
    .policy-quicklink-icon {
      font-size: 2.2rem;
      margin-bottom: 0.7rem;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .policy-quicklink-label {
      font-size: 1.08rem;
      font-family: var(--font-heading);
      font-weight: 700;
      margin-top: 0.2rem;
      color: inherit;
    }
  </style>
</Layout>
