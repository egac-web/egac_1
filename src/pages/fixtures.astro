---
import Layout from "../components/Layout.astro";
import Card from "../components/ui/Card.astro";
---

<Layout>
  <div style="max-width:900px;margin:0 auto;padding:0 1.5rem;">
    <section style="padding:3rem 0 2rem 0;">
      <h1 class="egac-section-title">Fixtures</h1>
      <p class="egac-section-lead">
        Upcoming events and competitions for all club members
      </p>
      <Card class="card--padded" title="2024 Fixtures">
        <ul style="margin:0;padding:0 0 0 1.2em;">
          <li>April 14: Sussex League, Brighton</li>
          <li>May 5: Southern Athletics League, Crawley</li>
          <li>June 2: Youth Development League, Horsham</li>
          <li>July 7: Sussex League, Eastbourne</li>
          <li>August 18: Southern Athletics League, Lewes</li>
          <li>September 8: Club Championships, East Grinstead</li>
        </ul>
      </Card>
    </section>
  </div>
  <style>
    .egac-section-title {
      font-size: 3rem;
      font-weight: 900;
      color: var(--blue);
      margin-bottom: 0.8rem;
      text-transform: uppercase;
      letter-spacing: 0.02em;
      text-align: center;
      font-family: var(--font-heading);
      text-shadow: 0 2px 12px rgba(20, 95, 186, 0.08);
    }
    .egac-section-lead {
      color: var(--dark-gray);
      margin-bottom: 2.5rem;
      font-size: 1.2rem;
      font-weight: 600;
      text-align: center;
      font-family: var(--font-sans);
    }
  </style>
</Layout>
