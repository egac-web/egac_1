// Shared layout component for EGAC site
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700;800;900&family=Open+Sans:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/tokens.css" />
    <style>
      .footer-nav {
        display: flex;
        flex-wrap: wrap;
        gap: 1.3rem;
        justify-content: center;
        margin-bottom: 0.7rem;
      }
      .footer-nav a {
        color: var(--yellow);
        text-decoration: none;
        font-weight: 700;
        font-size: 1.01rem;
        letter-spacing: 0.04em;
        padding: 0.2rem 0.1rem;
        border-radius: 4px;
        transition: color 0.18s, background 0.18s;
      }
      .footer-nav a:hover, .footer-nav a:focus-visible {
        color: var(--white);
        background: rgba(253,185,19,0.10);
        outline: none;
      }
      .egac-header {
        position: relative;
        z-index: 10;
        background: var(--blue);
        border-bottom: 1.5px solid rgba(253,185,19,0.13);
        box-shadow: 0 8px 32px rgba(20,95,186,0.10);
      }
      .header-inner {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1.8rem 1.5rem 1.1rem 1.5rem;
      }
      .header-logo {
        font-family: var(--font-heading);
        font-size: 2.5rem;
        font-weight: 900;
        letter-spacing: 0.04em;
        color: var(--white);
        text-transform: uppercase;
        margin: 0 0 0.5rem 0;
        text-shadow: 0 2px 12px rgba(20,95,186,0.18);
      }
      .logo-ac {
        color: var(--yellow);
        text-shadow: 0 2px 12px rgba(253,185,19,0.18);
      }
      .header-nav {
        display: flex;
        gap: 2.2rem;
        font-weight: 700;
        font-size: 1.08rem;
        text-transform: uppercase;
        letter-spacing: 0.06em;
        align-items: center;
        margin-top: 0.2rem;
      }
      .header-nav a {
        color: var(--white);
        text-decoration: none;
        padding: 0.3rem 0.1rem;
        border-radius: 6px;
        transition: color 0.18s, background 0.18s, box-shadow 0.18s, transform 0.18s;
        position: relative;
      }
      .header-nav a:hover, .header-nav a:focus-visible {
        color: var(--yellow);
        background: rgba(253,185,19,0.08);
        box-shadow: 0 2px 12px rgba(253,185,19,0.13);
        outline: none;
        transform: translateY(-2px) scale(1.04);
      }
      .nav-cta {
        background: linear-gradient(90deg, var(--yellow) 0%, #ffe066 100%);
        color: var(--blue) !important;
        font-weight: 900;
        border-radius: 2rem;
        box-shadow: 0 4px 18px rgba(253,185,19,0.18);
        margin-left: 0.8rem;
        padding: 0.7rem 1.5rem;
        letter-spacing: 0.08em;
        transition: background 0.18s, color 0.18s, box-shadow 0.18s, transform 0.18s;
      }
      .nav-cta:hover, .nav-cta:focus-visible {
        background: linear-gradient(90deg, #ffe066 0%, var(--yellow) 100%);
        color: var(--blue);
        box-shadow: 0 8px 32px rgba(253,185,19,0.22);
        transform: translateY(-3px) scale(1.06);
      }
      @media (max-width: 800px) {
        .header-inner { padding: 1.2rem 0.7rem 0.7rem 0.7rem; }
        .header-logo { font-size: 2rem; }
        .header-nav { gap: 1.1rem; font-size: 0.98rem; }
        .nav-cta { padding: 0.6rem 1.1rem; font-size: 0.98rem; }
      }
      .egac-footer {
        background: rgba(20,95,186,0.82);
        backdrop-filter: blur(14px) saturate(1.2);
        border-top: 1.5px solid rgba(253,185,19,0.13);
        box-shadow: 0 -8px 32px rgba(20,95,186,0.10);
        padding: 2.2rem 0 1.2rem 0;
        margin-top: 3rem;
      }
      .footer-inner {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.1rem;
      }
      .footer-copyright {
        color: var(--white);
        font-weight: 700;
        font-size: 1.08rem;
        letter-spacing: 0.02em;
        margin: 0 0 0.5rem 0;
        text-shadow: 0 2px 12px rgba(20,95,186,0.18);
      }
      .footer-socials {
        display: flex;
        gap: 1.1rem;
      }
      .footer-social {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 2.7rem;
        height: 2.7rem;
        border-radius: 50%;
        background: rgba(255,255,255,0.10);
        box-shadow: 0 2px 12px rgba(253,185,19,0.10);
        color: var(--yellow);
        font-size: 1.35rem;
        transition: background 0.18s, color 0.18s, box-shadow 0.18s, transform 0.18s;
      }
      .footer-social:hover, .footer-social:focus-visible {
        background: linear-gradient(135deg, var(--yellow) 0%, var(--blue) 100%);
        color: var(--white);
        box-shadow: 0 6px 24px rgba(253,185,19,0.18);
        outline: none;
        transform: scale(1.13) translateY(-2px);
      }
      @media (max-width: 800px) {
        .footer-inner { padding: 0 0.7rem; }
        .footer-copyright { font-size: 0.98rem; }
        .footer-social { width: 2.1rem; height: 2.1rem; font-size: 1.05rem; }
      }

      /* Minimal reveal for hero text: adds .is-visible unless the user prefers reduced motion */
      (function () {
        try {
          if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) return;
          window.addEventListener('DOMContentLoaded', function () {
            requestAnimationFrame(function () {
              document.querySelectorAll('.hero-text').forEach(function (el) {
                el.classList.add('is-visible');
              });
            });
          });
        } catch (e) { /* silent */ }
      })();

      /* Utility */
      body, *, *::before, *::after {
        box-sizing: border-box;
      }
