---
const {
  href,
  variant = "cta",
  type = "button",
  ariaLabel,
  class: extraClass = "",
  size = "md",
} = Astro.props;
const base = variant === "secondary" ? "btn-secondary" : "btn-cta";
const sizeClass = size === "sm" ? "btn-sm" : size === "lg" ? "btn-lg" : "";
const classes = `egac-btn btn ${base} ${sizeClass} ${extraClass}`.trim();
---

{
  href ? (
    <a class={classes} href={href} role="button" aria-label={ariaLabel}>
      <slot />
    </a>
  ) : (
    <button class={classes} type={type} aria-label={ariaLabel}>
      <slot />
    </button>
  )
}
<style>
  .egac-btn {
    border-radius: 2rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    font-family: var(--font-heading);
    box-shadow: 0 6px 18px rgba(20, 95, 186, 0.13);
    transition:
      background 0.18s,
      color 0.18s,
      box-shadow 0.18s,
      transform 0.18s;
    border: 2px solid transparent;
    padding: 1rem 2.1rem;
    font-size: 1.08rem;
    background: rgba(255, 255, 255, 0.13);
    backdrop-filter: blur(6px) saturate(1.1);
    color: var(--blue);
  }
  .egac-btn.btn-cta {
    background: linear-gradient(90deg, var(--yellow) 0%, #ffe066 100%);
    color: var(--blue);
    box-shadow: 0 8px 32px rgba(253, 185, 19, 0.18);
  }
  .egac-btn.btn-secondary {
    background: linear-gradient(90deg, var(--blue) 0%, #3a8be0 100%);
    color: var(--white);
    box-shadow: 0 8px 32px rgba(20, 95, 186, 0.18);
  }
  .egac-btn:hover,
  .egac-btn:focus-visible {
    background: linear-gradient(90deg, #ffe066 0%, var(--yellow) 100%);
    color: var(--blue);
    box-shadow:
      0 16px 48px rgba(253, 185, 19, 0.22),
      0 4px 24px rgba(20, 95, 186, 0.13);
    outline: none;
    transform: translateY(-3px) scale(1.04);
  }
  .egac-btn.btn-secondary:hover,
  .egac-btn.btn-secondary:focus-visible {
    background: linear-gradient(90deg, #3a8be0 0%, var(--blue) 100%);
    color: var(--white);
    box-shadow:
      0 16px 48px rgba(20, 95, 186, 0.22),
      0 4px 24px rgba(253, 185, 19, 0.13);
  }
  .btn-sm {
    padding: 0.7rem 1.3rem;
    font-size: 0.95rem;
  }
  .btn-lg {
    padding: 1.2rem 2.7rem;
    font-size: 1.18rem;
  }
</style>
